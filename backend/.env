# Environment Configuration Template
# Copy this file to .env and update with your actual values

# Django Configuration
DJANGO_SECRET_KEY=your-super-secret-key-here-change-in-production
DJANGO_DEBUG=True
DJANGO_ENV=local
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DJANGO_DATABASE_URL=postgres://user:password@localhost:5432/investwise
DB_NAME=investwise
DB_USER=postgres
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379/1
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password

# AI/ML Configuration
PREDICTOR_API_KEY=your-predictor-api-key
PREDICTOR_MODEL_PATH=models/predictor_model.h5
PREDICTOR_CACHE_TIMEOUT=3600

# External API Keys
FINANCIAL_API_KEY=your-financial-api-key
NEWS_API_KEY=your-news-api-key

# Security
DATA_ENCRYPTION_KEY=your-encryption-key

# Deployment
DOCKER_IMAGE_TAG=latest
KUBERNETES_NAMESPACE=default
CI_CD_ENABLED=False
CI_CD_GIT_REPO=https://github.com/MadScie254/InvestWise-Predictor.git
